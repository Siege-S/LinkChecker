<!-- res/drawable/spinner_background_with_arrow.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Background shape with border -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/SecondaryBLue"/> <!-- Background color -->
                    <corners android:radius="10dp"/> <!-- Rounded corners -->
                    <stroke
                        android:width="1dp"
                    android:color="@color/light_gray"/>
                    <padding android:right="10dp"/>
                </shape>
            </item>

            <!-- Dropdown arrow icon positioned to the end of the Spinner -->
            <item android:gravity="center|end">
                <bitmap
                    android:src="@drawable/ic_down"
                    android:gravity="center|end"/>
            </item>
        </layer-list>
    </item>
</selector>

